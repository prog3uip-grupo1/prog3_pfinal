<TextBoxProyecto>:
    multiline: False
    write_tab: False

<ScrollProyecto@ScrollView>:
    orientation: 'vertical'
    bar_width: '20dp'
    size_hint: 1,None
    bar_color: 1,0,0,.9
    bar_inactive_color: 1,0,0,.2

    canvas.before:
        Color:
            rgb: 0.1,0.1,0.1
        Rectangle:
            size: self.size
            pos: self.pos

#Definicion de grid de datos
<GridProyecto>:
    gHeader: gheader1
    gBody: gbody1

    anchor_x: 'left'
    anchor_y: 'top'
#    canvas.before:
#        Color:
#            rgb: 1,1,1
#        Rectangle:
#            size: self.size
#            pos: self.pos
    GridLayout:
        id: gheader1
        cols: root.columnas
        spacing: 1
        pos: 0, root.height - root.rHeight
        size_hint: None, None
        height: root.rHeight
        row_default_height: root.rHeight
        row_force_default: False

    ScrollProyecto:
        height: root.height - (gheader1.height + 10)
        pos: 0, 0
        GridLayout:
            id: gbody1
            cols: root.columnas
            spacing: 1
            size_hint: 1, None
            row_default_height: root.rHeight
            row_force_default: False

#Definicion de encabezados de grid de datos
<GridHeader>:
    size_hint_x: None
    size_hint_y: None
    width: self.width
    height: self.height
    canvas.before:
        Color:
            rgb: self.bgcolor
        Rectangle:
            pos: self.pos
            size: self.size

#Definicion de celdas de grid de datos
<GridCell>:
    size_hint_x: None
    size_hint_y: None
    width: self.width
    height: self.height
    canvas.before:
        Color:
            rgb: self.bgcolor
        Rectangle:
            size: self.size
            pos: self.pos

#Definicion de celdas de grid de datos
<GridCCell>:
    size_hint_x: None
    size_hint_y: None
    width: self.width
    height: self.height
    canvas.before:
        Color:
            rgb: self.bgcolor
        Rectangle:
            size: self.size
            pos: self.pos

<LabelPopup>:
    pos_hint: {'center_y':(.5)}
    size_hint_y: 1
    text_size: self.width, None
    height: self.texture_size[1]
    padding: self.height * .2, self.height * .2

<LabelSPopup>:
    padding: self.height * .15, self.height * .15

<LabelProyecto>:
    width: self.width
    height: self.height
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    markup: True
    padding: self.height * .2, self.height * .2
    canvas.before:
        Color:
            rgb: self.bgcolor
        Rectangle:
            size: self.size
            pos: self.pos

<DropParcial>:
    size_hint: self.size_hint
    pos_hint: self.pos_hint
    background_color: 1, 1, 1, 1
    background_normal: ''
    color: 0, 0, 0, 1
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    padding: self.height * .15, self.height * .15

<ButtonDropDown>:
    background_color: 1, .7, 0, 1
    background_normal: ''
    color: 0,0,0,1
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    padding: self.height * .15, self.height * .15
    canvas.after:
        Color:
            rgb: 0,0,0
        Line:
            rectangle: self.x,self.y,self.width-1,self.height-1
            width: 1

<PopupParcial>:
    background: 'data/fondo.png'
    title_color: 0, 0, 0, 1
    title_size: '16dp'
    separator_color: 0, 0, 0
    separator_height: '4dp'

<PopupContent>:
    mensaje: mensaje
    FloatLayout:
        size_hint: .2, .7
        pos_hint:{'x':0, 'center_y':.5}
        canvas.before:
            Color:
                rgba: 1, 1, 1,1
            Rectangle:
                size: self.size
                pos: self.pos
        canvas:
            Rectangle
                size: self.size
                pos: self.pos
                source: 'data/taxi.jpg'
    LabelSPopup:
        id: mensaje
        size_hint: .788, 1
        pos_hint:{'x':.211, 'y':0}

<VentanaProyecto>:
    otitle: ptitle
    obody: pbody
    LabelProyecto:
        id: ptitle
        size_hint: 1, .15
        pos_hint: {'x':0, 'top': 1}
        font_size: self.height * .65
        bold: True
    FloatLayout:
        id: pbody
        size_hint: 1, .85
        pos_hint: {'x':0, 'top': .85}
